{% comment %}
This section displays the product type of the current product on the product page.
{% endcomment %}

{% if template contains 'product' %}
  {% if product.type %}
    <div class="product-type-section">
      <h3>Product Type:</h3>
      <p>{{ product.type }}</p>
    </div>
  {% else %}
    <p>Product type not specified.</p>
  {% endif %}
{% else %}
  <p>This section is only available on product pages.</p>
{% endif %}

<style>
  .product-type-section {
    margin-top: 20px;
    padding: 10px;
    border-top: 1px solid #ccc;
  }
</style>